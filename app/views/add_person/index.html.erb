<div class="row-fluid">
    <h3 class="page-header text-info text-center">New Person<br/><%= image_tag("user.png", :alt=>"home") %></h3>
    <%= form_tag "/add_person", method: "post" do%>
      <div class="span3 offset1">
        <legend>Infos Person</legend>
        <input class="input" type="text" name="last_name" placeholder="Last name" required/><br/>
        <input class="input" type="text" name="first_name" placeholder="Lirst name" required/><br/>
        <input class="input" type="text" name="nationality" placeholder="Nationality" required/><br/>
        <input class="input" type="text" name="title" placeholder="Title" required/><br/>
        Gender: Women <input type="radio" name="gender" value="F"/> 
                Boy:<input type="radio" name="gender" value="M" />
      </div>

       <div class="span3">
        <legend>Job Caracteristics</legend>
        <input class="input" type="text" name="category" placeholder="Category" required/><br/>
        <input class="input" type="text" name="job" placeholder="Job" required/><br/>
        <input class="input" type="date" name="arrival" placeholder="Date arrival" required/><br/>
        <input class="input" type="date" name="departure" placeholder="Date departure" required/><br/>
        <select class="input" name="language" required>
          <option value="">Language</option>
           <% @languages.each do |language| %>
           <option value="<%= language.id %>"> <%= language.name %> </option>  
           <% end %>
        </select>
      </div>

       <div class="span3">
        <legend>image profil and validation</legend>
        <%= image_tag("user.png", :alt=>"img_profil") %>
        <input type="file" name="img_profil"/>
        <button type="submit" class="btn btn-success"> Add Person</button>
        <button type="reset" class="btn btn-danger"> Reset Form</button>
      </div>
    <% end %>
</div>
