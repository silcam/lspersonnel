<div class="container">

  <div class="page-header">
    <h3>Languages list</h3>
  </div>

  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Language</th>
      <th>Region</th>
    </tr>

    <% @languages.each do |language| %>
    <tr>
       <td><%= language.id %></td>
       <td><%= language.name %></td>
       <td><%= language.region.en %></td>
    </tr>
    <% end %>
  </table>
</div>
