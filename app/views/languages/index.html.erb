<h1 class="text-center"><%= image_tag("lang.png", :alt=>"people") %></h1>
    <h3 class="page-header text-info text-center">Languages list <button class="btn"> <%= image_tag("print.png", :alt=>"print") %> Print list</button></h3>
<div class="row-fluid">
  <div class="span8 offset2">  
    <table class="table table-bordered table-striped">
        <tr>
          <td class="">id_language</td>
          <td>language</td>
          <td>id region</td>
        </tr>

        <% @languages.each do |language| %>
        <tr>
           <td><%= language.id %></td>
           <td><%= language.name %></td>
           <td><%= Region.find(language.region_id ).name%></td>
        </tr>
        <% end %>
   </table>
  </div>
</div>