<div class="row-fluid">

  <div class="col-md-5">
    <h2 class=""> <%= @person.first_name %> <%= @person.last_name %></h2>

    <%= link_to("Edit", edit_person_path(@person), { class: "btn btn-primary" }) %>
    <%= link_to("Add Leave", edit_person_path(@person), { class: "btn btn-primary" }) %><br />

    <table class="table table-striped">
      <tr>
        <td>Category: </td>
        <td><%= @person.category %></td>
      </tr>
      <tr>
        <td>Job: </td>
        <td><%= @person.job %></td>
      </tr>
      <tr>
        <td>Title: </td>
        <td><%= @person.title %></td>
      </tr>
      <tr>
        <td>Nationality: </td>
        <td><%= @person.nationality %></td>
      </tr>
      <tr>
        <td>Gender: </td>
        <td><%= @person.gender %></td>
      </tr>
      <tr>
        <td>Arrival</td>
        <td><%= @person.arrival %></td>
      </tr>
      <tr>
        <td>Departure</td>
        <td><%= @person.departure %></td>
      </tr>
      <tr>
        <td>Languages</td>
        <td>
          <% @person.involvements.each do |inv| %>
            (<%= InvolvementLevel.id(inv.level).name %>) <%= inv.language.name %><br />

          <% end %>
        </td>
      </tr>
      <tr>
        <td>Created:</td>
        <td><%= @person.created_at %></td>
      </tr>
      <tr>
        <td>Last Updated:</td>
        <td><%= @person.updated_at %></td>
      </tr>
      <tr>
        <td><a href="" class="btn btn-danger">Delete (NOT WORKING)</a></td>
        <td></td>
      </tr>

    </table>

    <%= form_for @person, { url: attach_language_url(@person), method: :post } do |f| %>

      Add a New Language This Person is Involved With:<br />

      <table>
        <tr>
          <td>
          <%= collection_select(:person, :involvement_ids, @levels, :id, :name, prompt: true) %>
          </td>
          <td>
          <%= collection_select(:person, :language_ids, @languages, :id, :name, prompt: true) %>
          </td>
          <td>
          <%= f.submit "Add", { class: 'btn btn-primary' } %>
          </td>
        </tr>
      </table>

    <% end %>
  </div>

  <div class="col-md-5">
    <h3>Leaves:</h3>

    <% if @person.leaves.size == 0 %>
      No Leaves.
    <% else %>
      <% @person.leaves.each do |lv| %>
        <%= lv %>
      <% end %>
    <% end %>


  </div>

</div>
