
<div class="page-header">
  <h3><%= t(:New_leave_reason) %></h3>
</div>

<%= form_for(@reason) do |form| %>

  <div class="form-group">
    <%= form.label t(:Reason) %>
    <%= form.text_field :reason, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= submit_tag t(:Submit), class: 'btn btn-primary' %>
  </div>

<% end %>
