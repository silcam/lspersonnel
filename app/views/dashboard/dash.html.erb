</div>

<div class="col-sm-3">

  <h3>Quick Stats</h3>

  <div class="list-group">
    <%= link_to people_path(), class: 'list-group-item' do %>
      <span class="badge"><%= @people.size %></span>
      Number of People:
    <% end %>
    <%= link_to languages_path(), class: 'list-group-item' do %>
      <span class="badge"><%= @lang.size %></span>
      Number of Languages:
    <% end %>
    <%= link_to '#', class: 'list-group-item' do %>
      <span class="badge"><%= @region.size %></span>
      Number of Regions:
    <% end %>
  </div>
</div>

<div class="col-sm-1"></div>

<div class="col-sm-6">

  <h3>Users Requiring Action</h3>

  <ul class="list-group">
