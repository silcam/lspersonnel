
<% if @research_permit.errors.messages.size > 0 %>
<div class="bg-danger">
    <%= @research_permit.errors.messages.inspect %>
</div>
<% end %>

      <div class="form-group">
        <%= form.label :issue_date %>
        <%= form.text_field :issue_date, { type: 'date', class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.label :expiry_date %>
        <%= form.text_field :expiry_date, { type: 'date', class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.label :submission_date %>
        <%= form.text_field :submission_date, { type: 'date', class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.label :identifier %>
        <%= form.text_field :identifier, { class: 'form-control' } %>
      </div>

      <%= collection_select(:research_permit, :language_id, @languages, :id, :name, { prompt: true }, { class: 'form-control' }) %>

      <div class="form-group">
        <%= form.submit "Add Research Permit" %>
      </div>
