  <ul class="nav navbar-nav">
     <li><a href="/" title="home"><%= image_tag("home.png", :alt=>"home") %> Home </a></li>
     <li><a href="/people" title="see people list"> <%= image_tag("people.png", :alt=>"home") %> People </a></li>
     <li><a href="/languages" title="see languages list"> <%= image_tag("lang.png", :alt=>"home") %> Languages</a></li>
     <li><a href="/add_person" title="new person"><%= image_tag("user.png", :alt=>"home") %> Add Person</a></li>
     <li><a href="/add_language" title="new lang"> <%= image_tag("lang.png", :alt=>"home") %> Add Language</a></li>
     <li><a href="/" title="search"><%= image_tag("search.png", :alt=>"home") %> Search</a></li>
  </ul>
